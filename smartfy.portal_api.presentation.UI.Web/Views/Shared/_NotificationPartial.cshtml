@if (ViewBag.Sucess != null && ViewBag.Sucess)
{
    <div class="alert alert-success fade in alert-dismissible show mt-5">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">x</button>
        <strong>@ViewBag.MessageTitle</strong> @ViewBag.Message
    </div>
}
else if (ViewBag.Error != null && ViewBag.Error)
{
    <div class="alert alert-danger fade in alert-dismissible show mt-5">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">x</button>
        <strong>@ViewBag.MessageTitle</strong> @ViewBag.Message
    </div>
}

