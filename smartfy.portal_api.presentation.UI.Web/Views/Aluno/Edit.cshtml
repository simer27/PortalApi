@model Aluno

@{
    ViewData["Title"] = "Cadastro de Aluno";
}

<h4>Aluno</h4>

<form asp-action="Edit" id="myform">

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="card-title"><h6>Informações Básicas</h6></div>
                    <div class="row">
                        <div class="col-2">
                            <div class="form-group">
                                <label asp-for="Matricula" class="control-label">Matricula</label>
                                <input asp-for="Matricula" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Matricula" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label">Nome</label>
                                <input asp-for="Nome" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Idade" class="control-label">Idade</label>
                                <input asp-for="Idade" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Idade" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 mt-3">
            <input type="submit" value="Atualizar" class="btn btn-outline-success btn-sm w-150" /> |
            <a class="btn btn-outline-secondary btn-sm w-150" asp-action="Index">Voltar</a>
        </div>

    </div>

</form>